<%- include('../partials/header') %>

    <main
        class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8 transition-colors duration-300 font-sans">
        <div class="max-w-3xl mx-auto">

            <% if (!invoice) { %>
                <div
                    class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-10 text-center border border-gray-100 dark:border-gray-700">
                    <div
                        class="bg-red-100 dark:bg-red-900/30 w-20 h-20 mx-auto rounded-full flex items-center justify-center mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-red-500" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Transaksi Tidak Ditemukan</h2>
                    <p class="text-gray-500 dark:text-gray-400 mb-8">Maaf, data invoice yang Anda cari tidak tersedia
                        atau ID salah.</p>
                    <a href="/"
                        class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium">
                        Kembali ke Beranda
                    </a>
                </div>

                <% } else { %>
                    <% let hargaProduk=parseInt(invoice.price); let biayaAdmin=parseInt(invoice.payment_price); let
                        totalPembayaran=hargaProduk + biayaAdmin; %>

                        <div
                            class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden border border-gray-100 dark:border-gray-700 transition-colors duration-300">

                            <div class="bg-blue-600 p-6 sm:p-8 text-white relative overflow-hidden">
                                <div
                                    class="absolute top-0 right-0 -mr-10 -mt-10 w-40 h-40 rounded-full bg-white opacity-10 blur-2xl">
                                </div>

                                <div
                                    class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 relative z-10">
                                    <div>
                                        <p class="text-blue-100 text-sm font-medium uppercase tracking-wider mb-1">
                                            Invoice ID</p>
                                        <h1 class="text-3xl font-bold flex items-center gap-2">
                                            <%= invoice.id %>
                                                <button onclick="copyText('<%= invoice.id %>', 'btn-copy-id')"
                                                    id="btn-copy-id"
                                                    class="text-blue-200 hover:text-white transition-colors cursor-pointer"
                                                    title="Salin ID">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                                        viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                                    </svg>
                                                </button>
                                        </h1>
                                    </div>

                                    <% if(invoice.payment_status !=='paid' && invoice.status !=='failed' ) { %>
                                        <div class="text-right">
                                            <p class="text-blue-100 text-xs mb-1">Sisa Waktu Pembayaran</p>
                                            <div id="countdown-timer"
                                                class="text-xl font-mono font-bold bg-blue-700/50 px-3 py-1 rounded-lg border border-blue-400/30 inline-block">
                                                --:--:--
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>

                            <div class="p-6 sm:p-10 space-y-8">

                                <div>
                                    <h3
                                        class="text-xl font-bold text-gray-900 dark:text-white mb-4 border-b border-gray-200 dark:border-gray-700 pb-2">
                                        Status</h3>
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">

                                        <% let payLabel=invoice.payment_status; let
                                            payColor='bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' ;
                                            if (invoice.payment_status=='sukses' ) { payLabel='Lunas' ;
                                            payColor='bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400 border border-green-200 dark:border-green-800'
                                            ; } else if (invoice.payment_status=='gagal' ) { payLabel='Gagal' ;
                                            payColor='bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400 border border-red-200 dark:border-red-800'
                                            ; } else { payLabel='Belum Dibayar' ;
                                            payColor='bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400 border border-yellow-200 dark:border-yellow-800'
                                            ; } %>
                                            <div
                                                class="p-4 rounded-xl <%= payColor %> flex items-center justify-between">
                                                <span class="text-sm font-semibold opacity-80">Status Pembayaran</span>
                                                <span class="font-bold uppercase tracking-wide">
                                                    <%= payLabel %>
                                                </span>
                                            </div>

                                            <% let transLabel=invoice.transaction_status; let
                                                transColor='bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                                                ; if (invoice.transaction_status=='sukses' ) { transLabel='Sukses' ;
                                                transColor='bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 border border-blue-200 dark:border-blue-800'
                                                ; } else if (invoice.transaction_status=='gagal' ) { transLabel='Gagal'
                                                ;
                                                transColor='bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400 border border-red-200 dark:border-red-800'
                                                ; } else { transLabel='Pending' ;
                                                transColor='bg-orange-100 text-orange-700 dark:bg-orange-900/30 dark:text-orange-400 border border-orange-200 dark:border-orange-800'
                                                ; } %>
                                                <div
                                                    class="p-4 rounded-xl <%= transColor %> flex items-center justify-between">
                                                    <span class="text-sm font-semibold opacity-80">Status
                                                        Transaksi</span>
                                                    <span class="font-bold uppercase tracking-wide">
                                                        <%= transLabel %>
                                                    </span>
                                                </div>
                                    </div>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                                    <div class="space-y-4">
                                        <h3
                                            class="text-lg font-semibold text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-700 pb-2">
                                            Detail Produk</h3>

                                        <div>
                                            <p class="text-sm text-gray-500 dark:text-gray-400">Item</p>
                                            <p class="font-medium text-gray-800 dark:text-gray-200">
                                                <%= invoice.product %>
                                            </p>
                                        </div>

                                        <div>
                                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Data Akun</p>
                                            <div
                                                class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-3 border border-gray-200 dark:border-gray-600 space-y-1">
                                                <% for (let key in invoice.customer_number) { %>
                                                    <div class="flex justify-between text-sm">
                                                        <span class="text-gray-500 dark:text-gray-400 capitalize">
                                                            <%= key %>
                                                        </span>
                                                        <span
                                                            class="font-mono font-medium text-gray-800 dark:text-gray-200 select-all">
                                                            <%= invoice.customer_number[key] %>
                                                        </span>
                                                    </div>
                                                    <% } %>
                                            </div>
                                        </div>

                                        <div>
                                            <p class="text-sm text-gray-500 dark:text-gray-400">Nomor WhatsApp</p>
                                            <p class="font-medium text-gray-800 dark:text-gray-200">
                                                <%= invoice.wa_number %>
                                            </p>
                                        </div>
                                    </div>

                                    <div class="space-y-4">
                                        <h3
                                            class="text-lg font-semibold text-gray-900 dark:text-white border-b border-gray-200 dark:border-gray-700 pb-2">
                                            Rincian Biaya</h3>

                                        <div class="flex justify-between">
                                            <span class="text-sm text-gray-500 dark:text-gray-400">Metode</span>
                                            <span class="font-bold text-gray-800 dark:text-gray-200 uppercase">
                                                <%= invoice.payment_method %>
                                            </span>
                                        </div>

                                        <div class="flex justify-between">
                                            <span class="text-sm text-gray-500 dark:text-gray-400">Harga Produk</span>
                                            <span class="font-medium text-gray-800 dark:text-gray-200">Rp <%=
                                                    hargaProduk.toLocaleString('id-ID') %></span>
                                        </div>

                                        <div class="flex justify-between">
                                            <span class="text-sm text-gray-500 dark:text-gray-400">Biaya Admin</span>
                                            <span class="font-medium text-gray-800 dark:text-gray-200">
                                                Rp <%= biayaAdmin.toLocaleString('id-ID') %>
                                            </span>
                                        </div>

                                        <div class="border-t border-dashed border-gray-300 dark:border-gray-600 pt-3">
                                            <div class="flex justify-between items-center mb-1">
                                                <span class="text-sm font-bold text-gray-900 dark:text-white">Total
                                                    Pembayaran</span>
                                                <div class="flex items-center gap-2">
                                                    <span
                                                        class="text-2xl font-extrabold text-blue-600 dark:text-blue-400">
                                                        Rp <%= totalPembayaran.toLocaleString('id-ID') %>
                                                    </span>
                                                    <button
                                                        onclick="copyText('<%= totalPembayaran %>', 'btn-copy-total')"
                                                        id="btn-copy-total"
                                                        class="p-1.5 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 rounded-lg text-gray-500 hover:text-blue-600 dark:text-gray-300 transition-colors cursor-pointer"
                                                        title="Salin Nominal">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5"
                                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 01-2-2V5" />
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div
                                class="bg-gray-50 dark:bg-gray-900/50 p-4 text-center border-t border-gray-100 dark:border-gray-700">
                                <p class="text-sm text-gray-500 dark:text-gray-400 font-medium">
                                    Simpan bukti invoice ini jika terjadi kendala.
                                </p>
                            </div>

                        </div>
                        <% } %>
        </div>
    </main>

    <script>
        // Script Copy Text
        function copyText(text, btnId) {
            if (!navigator.clipboard) {
                const textArea = document.createElement("textarea");
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand("Copy");
                textArea.remove();
                showFeedback(btnId);
                return;
            }
            navigator.clipboard.writeText(text).then(() => showFeedback(btnId)).catch(err => console.error(err));
        }

        function showFeedback(btnId) {
            const btn = document.getElementById(btnId);
            if (!btn) return;
            const originalContent = btn.innerHTML;
            // Ubah icon jadi checkmark
            btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>`;

            setTimeout(() => { btn.innerHTML = originalContent; }, 2000);
        }

  // Script Countdown Timer
  <% if (typeof invoice !== 'undefined' && invoice && invoice.payment_status !== 'paid' && invoice.status !== 'failed') { %>
            (function () {
                const expiredTime = new Date("<%= invoice.expired_at %>").getTime();
                const timerElement = document.getElementById("countdown-timer");

                const updateTimer = () => {
                    const now = new Date().getTime();
                    const distance = expiredTime - now;

                    if (distance < 0) {
                        clearInterval(interval);
                        if (timerElement) {
                            timerElement.innerHTML = "EXPIRED";
                            timerElement.classList.add("text-red-500", "bg-red-100", "dark:bg-red-900/30");
                            timerElement.classList.remove("text-blue-600");
                        }
                        return;
                    }

                    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                    if (timerElement) {
                        timerElement.innerHTML =
                            (hours < 10 ? "0" + hours : hours) + ":" +
                            (minutes < 10 ? "0" + minutes : minutes) + ":" +
                            (seconds < 10 ? "0" + seconds : seconds);
                    }
                };

                const interval = setInterval(updateTimer, 1000);
                updateTimer();
            })();
  <% } %>
    </script>

    <%- include('../partials/footer') %>